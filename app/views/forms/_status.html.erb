<% @heading = "Status" %>
<%= render 'forms/header' %>

<h2>Users that have attempted the form</h2>
<div class="panel panel-default">
  <table class="table">
    <tr>
      <th class="col-xs-3">
        Username
      </th>
      <th>
        Name
      </th>
      <th>
        Date Attempted
      </th>
    </tr>
    <% @logs.each do |log| %>
      <% @user = log.user %>
      <tr>
        <td>
          <%= @user.username %>
        </td>
        <td>
          <%= @user.first_name %> <%= @user.last_name %>
        </td>
        <td>
          <%= log.created_at %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<h2>Yet to attempt..</h2>
<div class="panel panel-default">
  <table class="table">
    <tr>
      <th class="col-xs-3">
        User
      </th>
      <th>
        Name
      </th>
    </tr>
    <% @users.each do |user| %>
      <% if !@logs.exists?(user.id) %>
        <tr>
          <td>
            <%= user.username %>
          </td>
          <td>
            <%= user.first_name %> <%= user.last_name %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
