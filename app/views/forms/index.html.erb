<h1>Forms index</h1>
<%= link_to 'New Form', new_form_path %>

<table class="table">
  <tr>
    <th>Title and Description</th>
    <th>Author</th>
    <th>Date</th>
    <th>Template Title</th>
    <th>Status</th>
    <th>Link</th>

  </tr>
  <% @forms.each do |form| %>
    <tr>
      <td>
        <% if current_user == form.user || current_user.is_admin == true %>
        <b><%= link_to form.title, form_path(form) %></b>
        <% else %>
        <b><%= form.title %></b>
        <% end %><br />
        <%= form.description %>
      </td>
      <td>
        <%= form.user.first_name %>
      </td>
      <td>
        <%= form.form_date %>
      </td>
      <td>
        <%= form.form_template.title %>
      </td>

        <!-- Check log model -->
      <% if form.logs.exists?(user: current_user) %>
        <td>
          <span class="glyphicon glyphicon-ok"></span>
        </td>
        <td>
          Done
        </td>
      <% else %>
        <td>
          <span class="glyphicon glyphicon-remove"></span>
        </td>
        <td>
          <!-- Click to attempt or already Done -->
          <%= link_to 'Attempt Now', attempt_form_path(form) %>
        </td>
      <% end %>
      </td>

    <tr>
  <% end %>
</table>
