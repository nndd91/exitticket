<% @heading = "Results" %>
<%= render 'forms/header' %>
<% @questions.each do |question| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-10">
          <div class="row">
            <div class="col-md-2">
              Label:
            </div>
            <div class="col-md-8">
              <%= question.label %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-2">
              Type:
            </div>
            <div class="col-md-3">
              <%= question.qns_type %>
            </div>
            <div class="col-md-2">
              Required?
            </div>
            <div class="col-md-3">
              <%= question.qns_type %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <table class="table-bordered">
        <% question.answers.where(form: @form).each do |answer| %>
          <tr>
            <td style="padding: 5px"><%= answer.user.first_name %></td>
            <td style="padding: 5px"><%= answer.content %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>
