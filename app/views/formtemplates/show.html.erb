<h1>Formtemplates</h1>

<div class="panel panel-default">
  <table class="table">
    <tr>
      <td>Title</td>
      <td><%= @formtemplate.title %></td>
    </tr>
    <tr>
      <td>Description</td>
      <td><%= @formtemplate.description %></td>
    </tr>
    <tr>
      <td>Author</td>
      <td><%= @formtemplate.user.first_name %></td>
    </tr>

  </table>
</div>

<div>
  <%= link_to 'Edit FormTemplate or Add Questions', edit_formtemplate_path(@formtemplate), class: "btn btn-primary" %>
  <%= link_to 'Create Form with Template', new_form_path(form_template: @formtemplate), class: "btn btn-primary" %>
</div>
<br />

<div id="questionlist">
  <%= render partial: 'questions/list', locals: { questions: @formtemplate.questions } %>
</div>
