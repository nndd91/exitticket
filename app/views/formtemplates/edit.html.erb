<h1>Edit Form Template</h1>
<%= simple_form_for @formtemplate, url: formtemplate_path do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>

<div id="newquestion">
  <%= render partial: 'questions/new', locals: { formtemplate: @formtemplate } %>
</div>
<div id="questionlist">
  <%= render partial: 'questions/list', locals: { questions: @formtemplate.questions } %>
</div>
